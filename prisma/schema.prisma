generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String  @id @default(uuid())
  createdAt DateTime  @default(now())
  name String
  email String  @unique
  password String
  confirmed Boolean @default(false)
  role  UserRole
  oauthProviders OAuthUserProvider[]

  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model OAuthUserProvider {
  provider String
  email String 
  user User @relation(fields: [email], references: [email], onDelete: Cascade) 
  createdAt DateTime @default(now())

  @@unique([provider, email])
  @@map("oauth_user_providers")
}
